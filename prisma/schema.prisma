generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  user_id Int @id @defalut(autoincrement())
  username String @unique
  Password String
  first_name String?
  last_name String?
  email String? @unique
}

model plants {
  plant_id Int  @id @defalut(autoincrement())
  species String
  water_frequency String
  nickname String
  plant_image String
  user_id Int
  user users @relation{fields:[user_id], references:[user_id]}
}